{
	/* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
	"rules": {
		"user-color-schemes": {
			"$uid": {
				".write": "$uid === auth.uid",
				".read": "$uid === auth.uid"
			}
		},
		"user-colors": {
			"$uid": {
				".write": "$uid === auth.uid",
				".read": "$uid === auth.uid"
			}
		},
		"colors": {
			".read": true,
			".write": "auth != null"
		},
		"color-schemes": {
			".read": true,
			".write": "auth != null"
		}
	}
}